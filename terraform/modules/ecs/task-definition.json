[
    {
      "essential": true,
      "image": "${image_url}",
      "name": "${container_name}",
      "portMappings": [
        {
          "containerPort": 8888,
          "hostPort": 8888
        },
        {
            "containerPort": 25,
            "hostPort": 25
        }
      ],
      "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
              "awslogs-group": "${log_group_name}",
              "awslogs-region": "${region}",
              "awslogs-stream-prefix": "ecs"
          }
      },
      "secrets": [
        {
            "name": "CONFIG_SERVICE_API_KEY",
            "valueFrom": "arn:aws:ssm:${region}:${account}:parameter/${app_name_slug}/${environment}/CONFIG_SERVICE_API_KEY"
        },
        {
            "name": "CRYPTO_KEY",
            "valueFrom": "arn:aws:ssm:${region}:${account}:parameter/${app_name_slug}/${environment}/CRYPTO_KEY"
        },

        {
            "name": "SFAPI_ENDPOINT",
            "valueFrom": "arn:aws:ssm:${region}:${account}:parameter/${app_name_slug}/${environment}/SFAPI_ENDPOINT"
        },
        {
            "name": "CONFIG_SERVICE_URL",
            "valueFrom": "arn:aws:ssm:${region}:${account}:parameter/${app_name_slug}/${environment}/CONFIG_SERVICE_URL"
        },
        {
            "name": "CRYPTO_ALGORITHM",
            "valueFrom": "arn:aws:ssm:${region}:${account}:parameter/${app_name_slug}/${environment}/CRYPTO_ALGORITHM"
        },
        {
            "name": "REDIS_ENDPOINT",
            "valueFrom": "arn:aws:ssm:${region}:${account}:parameter/${app_name_slug}/${environment}/REDIS_ENDPOINT"
        }
      ]
    }
]
