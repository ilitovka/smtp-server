{
  "run": {
    "fs": { "require":  "fs" },
    "http": { "require":  "http" },
    "path": { "require":  "path" },
    "dotenv": { "require":  "dotenv" },
    "ics": { "require":  "ics" },
    "http-auth": { "require":  "http-auth" },
    "crypto": { "require": "crypto" },
    "jsforce": { "require":  "jsforce" },
    "express": { "require":  "express" },
    "moment": { "require":  "moment" },
    "request": { "require":  "request" },
    "mailparser": { "require": "mailparser" },
    "smtp-server": { "require": "smtp-server" },
    "log4js": { "require": "log4js" },
    "mime-types": {"require":  "mime-types"},
    "app": {
      "require":  "express",
      "new":      true
    },
    "smtpServer": {
      "require":  "include/smtpServer.js",
      "new":      true,
      "args":     ["di"]
    },
    "logger": {
      "require":  "include/logger.js",
      "new":      true,
      "args":     ["di"]
    },
    "console-logger": {
      "require":  "include/loggers/console.js",
      "new":      true,
      "args":     ["console"]
    },
    "sf-api": {
      "require": "include/sf-api.js",
      "new":      true,
      "args":     ["config", "jsforce", "sf-token-storage"]
    },
    "sf-token-storage": {
      "require": "include/sf-token-storage.js",
      "new":      true,
      "args":     ["config", "moment", "helper-crypto", "config-service"]
    },
    "config": {
      "require": "config.js",
      "new":      false
    },
    "config-service": {
      "require": "include/configService.js",
      "new":      true,
      "args":     ["config", "request"]
    },
    "helper-crypto": {
      "require": "include/helper/crypto.js",
      "new":      true,
      "args":     ["crypto", "config"]
    },
    "helper-mail-parser": {
      "require": "include/helper/mailParser.js",
      "new":      true
    },
    "helper-caldav-bridge": {
      "require": "include/helper/bridge.js",
      "new":      true
    },
    "helper-sf-bridge": {
      "require": "include/helper/bridgeSF.js",
      "new":      true,
      "args":     ["sf-api"]
    }
  },
  "test": {
    "jsforce": {
      "require":  "test/mocks/jsforce.js"
    },
    "fs": {
      "require":  "test/mocks/fs.js"
    },
    "request": {
      "require":  "test/mocks/request.js"
    }
  }
}
